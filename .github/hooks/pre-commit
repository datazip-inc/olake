#!/bin/sh
YELLOW="\033[0;33m"
RESET="\033[0m"

echo "ğŸ” Running golangci-lint on staged files..."

# Check if golangci-lint is installed
if ! command -v golangci-lint >/dev/null 2>&1; then
  echo "âŒ golangci-lint is not installed. Please install it first."
  exit 1
fi

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$')

if [ -z "$STAGED_FILES" ]; then
    echo "âœ… No Go files staged. Skipping lint check."
    exit 0
fi

echo -e "${YELLOW}ğŸ“„ Staged Go files:${RESET}"
echo "$STAGED_FILES" | sed 's/^/   ğŸ“Œ /'

golangci-lint run --timeout=5m

LINT_EXIT_CODE=$?

if [ $LINT_EXIT_CODE -ne 0 ]; then
    echo "âŒ Linting failed! Please fix issues before committing."
    exit 1
fi

echo "âœ… Linting passed! Proceeding with commit."
exit 0